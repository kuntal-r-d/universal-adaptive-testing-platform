{
  "name": "universal-adaptive-testing-platform",
  "version": "0.1.0",
  "private": true,
  "description": "A configurable, extensible adaptive testing engine supporting multiple exam methodologies",
  "keywords": [
    "adaptive-testing",
    "CAT",
    "IRT",
    "psychometrics",
    "assessment"
  ],
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @uat/api-service dev",
    "build": "pnpm -r --filter './packages/**' build && pnpm -r --filter './apps/**' build",
    "test": "pnpm test:unit && pnpm test:integration",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm -r test:integration",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "pnpm format:check && pnpm lint && pnpm type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "pnpm -r build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.4"
}

