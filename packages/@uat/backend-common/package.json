{
  "name": "@uat/backend-common",
  "version": "0.1.0",
  "description": "Shared backend utilities for Universal Adaptive Testing Platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "test:unit": "node --test --experimental-test-coverage test/unit/**/*.test.ts",
    "test:integration": "node --test test/integration/**/*.spec.ts",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "pino": "^9.0.0",
    "pg": "^8.13.0",
    "mongodb": "^6.0.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  }
}

