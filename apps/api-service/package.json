{
  "name": "@uat/api-service",
  "version": "0.1.0",
  "private": true,
  "description": "Universal Adaptive Testing Platform - API Service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "test:unit": "node --test --experimental-test-coverage test/unit/**/*.test.ts",
    "test:integration": "node --test test/integration/**/*.spec.ts",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@uat/backend-common": "workspace:*",
    "express": "^4.21.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/swagger-ui-express": "^4.1.0",
    "tsup": "^8.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}

