{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "rcf-prd",
  "title": "RCF PRD Document",
  "description": "Product Requirements Document in RCF JSON format (generated by LLM)",
  "type": "object",
  "required": ["prdId", "productName", "version", "requirements"],
  "properties": {
    "prdId": {
      "type": "string",
      "description": "Unique PRD identifier",
      "pattern": "^PRD-\\d{3}$"
    },
    "productName": {
      "type": "string",
      "description": "Product/feature name",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "Document version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "status": {
      "type": "string",
      "description": "Document status",
      "enum": ["draft", "review", "approved"]
    },
    "executiveSummary": {
      "type": "string",
      "description": "Executive summary of the PRD"
    },
    "problemStatement": {
      "type": "string",
      "description": "Problem being solved",
      "minLength": 1
    },
    "targetUsers": {
      "type": "array",
      "description": "Target user personas",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "inScope": {
      "type": "array",
      "description": "What is in scope",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "outOfScope": {
      "type": "array",
      "description": "What is out of scope",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "objectives": {
      "type": "array",
      "description": "Product objectives",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "constraints": {
      "type": "array",
      "description": "Product constraints and limitations",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "requirements": {
      "type": "array",
      "description": "Product requirements",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "category", "domain", "priority"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Requirement identifier",
            "pattern": "^REQ-\\d{3}$"
          },
          "title": {
            "type": "string",
            "description": "Requirement title",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Detailed requirement description",
            "minLength": 1
          },
          "category": {
            "type": "string",
            "description": "Requirement category",
            "enum": ["functional", "non-functional", "technical", "security"]
          },
          "domain": {
            "type": "string",
            "description": "Business domain for the requirement",
            "minLength": 1
          },
          "priority": {
            "type": "string",
            "description": "MoSCoW priority",
            "enum": ["must", "should", "could", "wont"]
          },
          "rationale": {
            "type": "string",
            "description": "Rationale for the requirement"
          },
          "tags": {
            "type": "array",
            "description": "Optional tags for categorization",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "additionalProperties": true
      },
      "minItems": 1
    },
    "glossary": {
      "type": "object",
      "description": "Glossary of terms",
      "additionalProperties": {
        "type": "string"
      }
    },
    "createdAt": {
      "type": "string",
      "description": "Creation timestamp",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "description": "Last update timestamp",
      "format": "date-time"
    }
  },
  "additionalProperties": true
}
